<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="355.0" prefWidth="466.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ma.fstt.trackingl.ProductViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Nom Produit :" />
        <TextField fx:id="nomprod" />
        <Label text="Catégorie" />
        <TextField fx:id="cat" />
        <Label text="Prix :" />
        <TextField fx:id="pr" />
        <Label text="Description :" />
        <TextField fx:id="des" />
        <Button fx:id="ok"  mnemonicParsing="false" onAction="#OnSaveButtonClick" text="Save" />

        <Button fx:id="delete" mnemonicParsing="false" onAction="#deleteButton" text="Delete" />
        <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0">
            <columns>
                <TableColumn fx:id="colo_id" prefWidth="60.0" text="id" />
                <TableColumn fx:id="col_nompr" prefWidth="75.0" text="nom_prod" />
                <TableColumn fx:id="col_cat" prefWidth="75.0" text="Catégorie" />
                <TableColumn fx:id="col_pr" prefWidth="75.0" text="Prix" />
                <TableColumn fx:id="col_des" prefWidth="75.0" text="Description" />


            </columns>
        </TableView>

    </children>

</VBox>
